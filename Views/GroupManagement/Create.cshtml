@model Library.Models.GroupModel

@{
    ViewData["Title"] = "Nauja grupė";
}


<h4>Kurti naują grupę</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EndDate" class="control-label"></label>
                <input asp-for="EndDate" class="form-control" />
                <span asp-validation-for="EndDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GroupTeacherName" class="control-label"></label>
                <input asp-for="GroupTeacherName" class="form-control" />
                <span asp-validation-for="GroupTeacherName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Kurti grupę" class="btn btn-primary" />
                <a class="btn btn-secondary" asp-action="Index">Atgal</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
